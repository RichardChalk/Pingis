@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Table Tennis Scoreboard</h2>

<form method="post">
    <input type="hidden" asp-for="CurrentMatch.Id" />

    <div>
        <p>Match Id: @Model.CurrentMatch.Id</p>
        <p>Player 1 Score: @Model.CurrentMatch.Player1Score</p>
        <p>Player 2 Score: @Model.CurrentMatch.Player2Score</p>
        <p>Current Server: @(Model.CurrentMatch.IsPlayer1Serve ? "Player 1" : "Player 2")</p>
    </div>

    <div>
        <button asp-page-handler="AddPointToPlayer1">Add Point to Player 1</button>
        <button asp-page-handler="AddPointToPlayer2">Add Point to Player 2</button>
    </div>
</form>